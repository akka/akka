<?xml version="1.0" encoding="UTF-8"?>

<configuration>

<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
  <layout>
    <pattern>%date{ISO8601} %-5level %X{akkaSource} %X{sourceThread} - %msg%n</pattern>
  </layout>
</appender>

<root level="info">
        <appender-ref ref="STDOUT" />
</root>

</configuration>
